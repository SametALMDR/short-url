{% extends 'admin/base.html.twig' %}

{% block title %}Pages - Admin Panel{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.24/css/dataTables.bootstrap4.min.css">
{% endblock %}

{% block body %}
    <div class="summary">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="def-cart mt-4">
                        <div class="row">
                            <div class="col-12 d-flex justify-content-between align-items-center">
                                <div class="">
                                    <h4 class="font-weight-bold">Pages</h4>
                                    <p>You can manage your pages below.</p>
                                </div>
                                <a href="{{ path('admin_create_page') }}" class="btn btn-dark text-white"><i class="bi bi-plus-circle"></i> New Page</a>
                            </div>
                            <div class="col-12">
                                <table id="example" class="table table-striped table-bordered" style="width:100%">
                                    <thead>
                                    <tr>
                                        <th>Url</th>
                                        <th>Title</th>
                                        <th>Creation date</th>
                                        <th>Updation date</th>
                                        <th></th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for page in pages %}
                                        <tr>
                                            <td>{{ page.url }}</td>
                                            <td>{{ page.title | slice(0, 35) }}{% if page.title | length > 35 %}...{% endif %}</td>
                                            <td>{{ page.createdat | date('d.m.Y H:i') }}</td>
                                            <td>{{ page.updatedat | date('d.m.Y H:i') }}</td>
                                            <td>
                                                <a href="{{ path('admin_edit_page',{ id: page.id }) }}" class="btn btn-sm btn-success m-1"><i class="bi bi-pencil text-white"></i></a>
                                                <a href="{{ path('admin_del_page',{ id: page.id }) }}" class="btn btn-sm btn-danger m-1"><i class="bi bi-trash text-white"></i></a>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}

{% block scripts %}
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.24/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="https://cdn.datatables.net/1.10.24/js/dataTables.bootstrap4.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#example').DataTable({
                "order": [[ 4, "desc" ]]
            });
        });
    </script>
{% endblock %}
