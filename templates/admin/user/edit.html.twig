{% extends 'admin/base.html.twig' %}

{% block title %}Edit User - Admin Panel{% endblock %}

{% block body %}
    <div class="summary">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-12">
                    <div class="def-cart mt-4">
                        <div class="row">
                            <div class="col-12 d-flex justify-content-between align-items-center">
                                <div class="">
                                    <h4 class="font-weight-bold">Edit User</h4>
                                    <p>You can edit user information below.</p>
                                </div>
                            </div>
                            <div class="col-12">
                                {{ form(user_form) }}
                            </div>
                            <div class="col-12">
                                <h4 class="font-weight-bold">Change Password</h4>
                                <form action="{{ path('admin_user_change_password',{ 'id' : uid}) }}" method="post">
                                    <input type="password" name="password" class="form-control mb-3" placeholder="Leave blank if you wont change the password">
                                    <button type="submit" class="btn btn-dark">Change Password</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
