{% extends 'base.html.twig' %}

{% block title %}Sign Up{% endblock %}

{% block header %}
    {% include 'header.html.twig' %}
{% endblock %}

{% block body %}

    {% include 'breadcrumb.html.twig' with {'title': 'Register','description':'Create a new account'} %}

    <section class="mt-5 mb-5">
        <div class="container">
            <div class="row">
                <div class="col-12 col-sm-6 offset-sm-3">
                    <form method="post" class="login-form" action="{{ path('app_post_signup') }}">

                        <div class="alert alert-danger p-0 border-0">
                            {% for message in app.flashes('error') %}
                                <li class="pl-3 pt-2 pb-1 list-unstyled">{{ message }}</li>
                            {% endfor %}
                        </div>

                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">
                                {{ message }}
                            </div>
                        {% endfor %}

                        <div class="mt-4">
                            <label class="sr-only" for="inputEmail">Name</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="bi bi-person"></i></div>
                                </div>
                                <input type="text" name="name" id="name" class="form-control" placeholder="Name" required autofocus>
                            </div>
                        </div>

                        <div class="mt-4">
                            <label class="sr-only" for="inputEmail">Surname</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="bi bi-person"></i></div>
                                </div>
                                <input type="text"  name="surname" id="surname" class="form-control" placeholder="Surname" required autofocus>
                            </div>
                        </div>

                        <div class="mt-4">
                            <label class="sr-only" for="inputEmail">Username</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="bi bi-person"></i></div>
                                </div>
                                <input type="text" name="username" id="username" class="form-control" placeholder="Username" required autocomplete="off">
                            </div>
                        </div>

                        <div class="mt-4">
                            <label class="sr-only" for="inputEmail">Email</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="bi bi-at"></i></div>
                                </div>
                                <input type="email" name="email" id="inputEmail" class="form-control" placeholder="E-mail address" required autocomplete="off">
                            </div>
                        </div>

                        <div class="mt-4">
                            <label class="sr-only" for="inputEmail">Password</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="bi bi-key"></i></div>
                                </div>
                                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required autocomplete="off">
                            </div>
                        </div>

                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="text-center">
                            <button class="btn btn-blue mt-4" type="submit">Sign Up Now!</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block footer %}
    {% include 'footer.html.twig' %}
{% endblock %}
