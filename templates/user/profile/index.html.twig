{% extends 'base.html.twig' %}

{% block title %}Profile - User Panel{% endblock %}

{% block header %}
    {% include 'header.html.twig' %}
{% endblock %}

{% block body %}

    {% include 'breadcrumb.html.twig' with {'title': 'User Profile','description':'You can change your profile information below'} %}

    {% include 'user/navbar.html.twig' %}

<section class="panel-wrapper mb-5 mt-5">
    <div class="container">
        <div class="row">
            <div class="col-12 col-sm-6 offset-sm-3">
                <div class="custom-card">

                    {% for message in app.flashes('success') %}
                        <div class="alert alert-success">
                            {{ message }}
                        </div>
                    {% endfor %}

                    {% for message in app.flashes('error') %}
                        <div class="alert alert-danger">
                            {{ message }}
                        </div>
                    {% endfor %}

                    <form method="post" action="{{ path('user_profile_post') }}">
                        <div class="mt-4">
                            <label class="sr-only" for="inputEmail">Name</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="bi bi-person"></i></div>
                                </div>
                                <input type="text" name="name" id="name" class="form-control" placeholder="Name" value="{{ user.getName() }}" required="" autofocus="">
                            </div>
                        </div>

                        <div class="mt-4">
                            <label class="sr-only" for="inputEmail">Surname</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="bi bi-person"></i></div>
                                </div>
                                <input type="text" name="surname" id="surname" class="form-control" placeholder="Surname" value="{{ user.getSurname() }}"  required="" autofocus="">
                            </div>
                        </div>

                        <div class="mt-4">
                            <label class="sr-only" for="inputEmail">Username</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="bi bi-person"></i></div>
                                </div>
                                <input type="text" name="username" id="username" class="form-control" placeholder="Username" value="{{ user.getCUsername() }}" required="" autocomplete="off">
                            </div>
                        </div>

                        <div class="mt-4">
                            <label class="sr-only" for="inputEmail">Email</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="bi bi-at"></i></div>
                                </div>
                                <input type="email" name="email" id="inputEmail" class="form-control" placeholder="E-mail address" value="{{ user.getEmail() }}" required="" autocomplete="off">
                            </div>
                        </div>

                        <div class="mt-4">
                            <label class="sr-only" for="inputEmail">Password</label>
                            <div class="input-group mb-2">
                                <div class="input-group-prepend">
                                    <div class="input-group-text"><i class="bi bi-key"></i></div>
                                </div>
                                <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Leave blank if you wont change password" autocomplete="off">
                            </div>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-blue mt-4" type="submit">
                                Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


{% endblock %}

{% block footer %}
    {% include 'footer.html.twig' %}
{% endblock %}

